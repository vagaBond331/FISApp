@model FISApp.Models.EmployeeViewModels
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#demo-pie-1').pieChart({
            barColor: '#3bb2d0',
            trackColor: '#eee',
            lineCap: 'round',
            lineWidth: 8,
            onStep: function (from, to, percent) {
                $(this.element).find('.pie-value').text(Math.round(percent) + '%');
            }
        });

        $('#demo-pie-2').pieChart({
            barColor: '#fbb03b',
            trackColor: '#eee',
            lineCap: 'butt',
            lineWidth: 8,
            onStep: function (from, to, percent) {
                $(this.element).find('.pie-value').text(Math.round(percent) + '%');
            }
        });
    });
</script>


<div class="social grid">
    <div class="grid-info">
        <table border="1">
            <tr>
                @for (int i = 0; i < Model.numDays; i++)
                {
                    <th class="tbcell">@(i + 1)</th>
                }
            </tr>
            <tr>
                @for (int i = 1; i < Model.numDays + 1; i++)
                {
                    <td>
                        @if (@Model.monthAttend[i] == true)
                        {
                            <span>v</span>
                        }
                        else if (i < DateTime.Now.Day)
                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span></span>
                        }
                    </td>
                }
            </tr>
        </table>
    </div>
</div>


<div class="agile-grids">
    <div class="col-md-4 charts-right">
        <!-- area-chart -->
        <div class="area-grids">
            <div class="area-grids-heading">
                <h3>Device status</h3>
            </div>
            <div>

            </div>
        </div>
        <!-- //area-chart -->
    </div>
    <div class="col-md-8 chart-left">
        <!-- updating-data -->
        <div class="agile-Updating-grids">
            <div class="area-grids-heading">
                <h3>Log Attend (<span><a href="@Url.Action("ExportLOGPage", "Admin")">Export here</a></span>)</h3>
            </div>
            <div>
                @foreach (var item in Model.listAttent)
                {
                    <p>Attend at "@item.location" at @item.log_time</p>
                }
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>